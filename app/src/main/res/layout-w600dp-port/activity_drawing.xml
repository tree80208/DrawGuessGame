        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/scoreone"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Score: 1000"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/scoretwo"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Score: 999"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/scorethree"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Score: 992"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/scorefour"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Score: 0"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:weightSum="8">

            <Button
                android:id="@+id/button_red"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@color/colorRed"
                android:onClick="changePaintColor" />

            <Button
                android:id="@+id/button_green"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@color/colorGreen"
                android:onClick="changePaintColor" />

            <Button
                android:id="@+id/button_blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@color/colorBlue"
                android:onClick="changePaintColor" />

            <Button
                android:id="@+id/button_purple"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@color/colorPurple"
                android:onClick="changePaintColor" />

            <Button
                android:id="@+id/button_aqua"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@color/aqua"
                android:onClick="changePaintColor" />

            <Button
                android:id="@+id/button_pink"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@color/pink"
                android:onClick="changePaintColor" />

            <Button
                android:id="@+id/button_grey"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@color/grey"
                android:onClick="changePaintColor" />

            <Button
                android:id="@+id/button_orange"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@color/orange"
                android:onClick="changePaintColor" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <Button
                android:id="@+id/button_small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"

                android:background="@color/colorSmallButton"

                android:onClick="changeBrushSize"
                android:text="@string/button_small"
                android:textAppearance="@style/TextAppearance.AppCompat.Large" />

            <Button
                android:id="@+id/button_medium"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:onClick="changeBrushSize"

                android:background="@color/colorMediumButton"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="@string/button_medium"/>

            <Button
                android:id="@+id/button_large"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:onClick="changeBrushSize"

                android:background="@color/colorLargeButton"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="@string/button_large"/>

            <Button
                android:id="@+id/button_clear"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"

                android:onClick="clearDrawing"

                android:background="@color/colorClearButton"
                android:textColor="@color/colorWhite"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:text="clear"/>

            <Button
                android:id="@+id/button_erase"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorShareButton"
                android:onClick="changePaintColor"
                android:text="@string/button_eraser"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/draw_layout"
            android:layout_width="match_parent"
            android:layout_height="642dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/wordTimerLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/guessWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Attempt to draw: House"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/timerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="seconds remaining: 60"
                    android:textSize="30dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

