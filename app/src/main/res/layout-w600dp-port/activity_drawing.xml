            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/cat" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/cat" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/cat" />

        </LinearLayout>


